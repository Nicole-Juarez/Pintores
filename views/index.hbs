{{> header}}
<div class="container">
    <h1>Pintores</h1>
    {{#if pintores}}
    <table class="table table-dark table-hover">
        <thead>
        <tr>
            <td>ID</td>
            <td>Nombre</td>
            <td>Ocupación</td>
            <td>Nacionalidad</td>
            <td>Area</td>
            <td>Generos</td>
            <td>Biografía</td>
            <td>Imagen</td>
        </tr>
        </thead>
        <tbody>
        {{#each pintores}}
        <tr>
            <td>{{_id}}</td>
            <td>{{nombre}}</td>
            <td>{{ocupacion}}</td>
            <td>{{nacionalidad}}</td>
            <td>{{area}}</td>
            <td>{{generos}}</td>
            <td>{{biografia}}</td>
            <td>{{pintura}}</td>
        </tr>
        {{/ each}}
        </tbody>
    </table>
    {{ else }}
    <div>No se encontraron Pintores.</div>
    {{/if}}
</div>
{{> footer}}

